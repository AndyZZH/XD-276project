<div class="row">
  <div class="col-xs-12 text-center">
    <%= form_tag search_result_path, method: :get, class: 'form-inline' do %>
      <%= text_field_tag :search_key, @prev_search_key, class: 'form-control', placeholder: 'Search Users' %>
      <%= button_tag type: "submit", class: "btn btn-info" do %>
        <span class="glyphicon glyphicon-search"></span>
      <% end %>
    <% end %>
  </div>
</div>


<br>

<% if @results.empty? %>
<h3 class="lead">No results found</h3>
<% else %>
<div class="table-responsive">
  <table class='table table-hover'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Rank</th>
      </tr>
    </thead>
    <tbody>
      <% @results.each do |r| %>
      <tr>
        <td class="vert-align"><%= link_to "#{ r.fname } #{ r.lname }", user_path(r.id) %></td>
        <% if r.rankicon %>
        <td class="vert-align"><%= image_tag r.rankicon, height: '50', width: '50' %></td>
        <% else %>
        <td class="vert-align"> - </td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% end %>

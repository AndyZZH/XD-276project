<% provide(:title, @user.fname) %>
<h1>

  <%= image_tag @user.avatar.url(:thumb), :class=> 'img-circle'  %>
  <%= @user.fname %>
  <% if @user.rankicon %>
  <%= image_tag @user.rankicon, height: '70', width: '70' %>
  <% end %>
</h1>

<table class=" table table-striped sortable">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email Adress</th>
      <th>Points</th>
    </tr>
  </thead>

 <tbody>

     <tr>
      <td class="vert-align"><%= @user.fname %></td>
      <td class="vert-align"><%= @user.lname %></td>
      <td class="vert-align"><%= @user.email %></td>
      <% if @user.point != nil %>
      <td class="vert-align"><%= @user.point %></td>
      <%else%>
      <td class="vert-align"><%=0 %>
      <%end%>
    </tr>

 </tbody>
 </table>

<section class="stats">
  <%= render 'shared/stats' %>
</section>


 <div class="col-md-12">
    <%= render 'follow_form' if logged_in? %>
</div>


<% if @user.reviews.any? %>
  <div class="col-xs-12">
    <h3>Reviews (<%= @user.reviews.count %>)</h3>
    <ol class="reviews">
      <%= render @reviews %>
    </ol>
    </br>
  </div>
  <div class="col-xs-12 text-center">
    <h6><%= will_paginate @reviews, :param_name => 'reviews_page' %></h6>
  </div>
<% end %>



<% if @user.locations.any? %>
  <div class="col-xs-12">
    <h3>Locations visited (<%= @user.locations.count %>)</h3>
    <ol class="reviews">
      <%= render @locations %>
    </ol>
  </br>
  </div>
  <div class="col-xs-12 text-center">
    <h6><%= will_paginate @locations, :param_name => 'locations_page' %></h6>
  </div>
<% end %>

<table class=" table table-striped sortable">
<thead>
  <tr>
    <th>Position</th>
    <th>Name</th>
    <th>Email Address</th>
    <th>Points</th>
    <th>Rank</th>
  </tr>
</thead>
<% @count = 1 %>
<% @users.each do |user| %>
 <tbody>
     <tr>
       <td class="vert-align"><%= @count %></td>
       <% @count += 1 %>
      <td class="vert-align"><%= link_to "#{ user.fname } #{ user.lname }", user_path(user.id) %></td>
      <td class="vert-align"><%= user.email %></td>
      <% if user.point != nil %>
      <td class="vert-align"><%= user.point %></td>
      <%else%>
      <td class="vert-align"><%=0 %></td>
      <%end%>

      <% if user.rankicon %>
      <td class="vert-align"><%= image_tag user.rankicon, height: '50', width: '50' %></td>
      <% else %>
      <td class="vert-align">Not Ranked </td>
      <% end %>
    </tr>

 </tbody>

<% end %>

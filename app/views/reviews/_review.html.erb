<div class="col-xs-6 col-lg-4">

  <%= image_tag current_user.avatar.url(:thumb), :class=> 'img-circle' %>
  <span class="user"><%= link_to review.user.fname, review.user %></span>
  <span class="content"><%= review.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(review.created_at) %> ago.
    <% if current_user?(review.user) %>
      <%= link_to "delete", review, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>


</div>
